{
  "info": {
    "name": "inferencia API",
    "description": "OpenAI-compatible API gateway integration tests. Run with Newman against a running instance.",
    "schema": "https://schema.postman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:18080" },
    { "key": "apiKey", "value": "sk-integration-test" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /health",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('body has status ok', () => { const j = pm.response.json(); pm.expect(j.status).to.eql('ok'); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "GET /health/ready",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200 or 503', () => { const code = pm.response.code; pm.expect([200, 503]).to.include(code); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health/ready"
          }
        }
      ]
    },
    {
      "name": "Version",
      "item": [
        {
          "name": "GET /version",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('body has version', () => { const j = pm.response.json(); pm.expect(j).to.have.property('version'); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/version"
          }
        }
      ]
    },
    {
      "name": "API (auth required)",
      "item": [
        {
          "name": "GET /v1/models (no auth → 401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 401', () => pm.response.to.have.status(401));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/v1/models"
          }
        },
        {
          "name": "GET /v1/models (with auth → 200 or 503)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200 or 503', () => { const code = pm.response.code; pm.expect([200, 503]).to.include(code); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{apiKey}}" }
            ],
            "url": "{{baseUrl}}/v1/models"
          }
        },
        {
          "name": "POST /v1/chat/completions (no auth → 401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 401', () => pm.response.to.have.status(401));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"model\":\"test\",\"messages\":[{\"role\":\"user\",\"content\":\"hi\"}]}"
            },
            "url": "{{baseUrl}}/v1/chat/completions"
          }
        },
        {
          "name": "POST /v1/embeddings (no auth → 401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 401', () => pm.response.to.have.status(401));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"model\":\"test\",\"input\":\"hello\"}"
            },
            "url": "{{baseUrl}}/v1/embeddings"
          }
        }
      ]
    },
    {
      "name": "Docs",
      "item": [
        {
          "name": "GET /docs",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('is HTML', () => pm.expect(pm.response.headers.get('Content-Type')).to.include('text/html'));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/docs"
          }
        },
        {
          "name": "GET /openapi.yaml",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('body contains openapi', () => pm.expect(pm.response.text()).to.include('openapi'));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/openapi.yaml"
          }
        }
      ]
    }
  ]
}
